    <%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= listTitle %> </h1>
    </div>

    <div class="box">
      <% tasks.forEach((task)=>{ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= task._id %>,<%= listTitle %>" onchange="this.form.submit()">
            <p><%= task.name %></p>
          </div>
        </form>
      <%}) %>

      <form action="/" method="post" class="item">
        <input type="text" name="task" placeholder="New Item" autocomplete="off" required>
        <button type="submit" name="listTitle" value=<%= listTitle %>>+</button>
      </form>
    </div>
    <%- include("footer") -%>